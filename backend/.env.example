# AiFineTune Platform - Environment Variables

# Application
APP_NAME="AiFineTune Platform"
APP_VERSION="1.0.0"
DEBUG=true
ENVIRONMENT=development

# API
API_PREFIX=/api
CORS_ORIGINS=["http://localhost:5173","http://127.0.0.1:5173"]

# Database
DATABASE_URL=postgresql://davidsamanyaporn@localhost:5432/AiFineTune

# JWT Authentication (CHANGE IN PRODUCTION!)
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# File Storage
UPLOAD_DIR=./uploads
DATASETS_DIR=./uploads/datasets
MODELS_DIR=./uploads/models
CHECKPOINTS_DIR=./uploads/checkpoints
MAX_UPLOAD_SIZE_MB=500

# HuggingFace
HF_CACHE_DIR=
HF_TOKEN=

# Training
DEFAULT_DEVICE=auto
MAX_CONCURRENT_JOBS=2

# Modal.com (Cloud Training)
MODAL_TOKEN_ID=
MODAL_TOKEN_SECRET=

# Encryption (for storing HF tokens securely)
ENCRYPTION_KEY=
